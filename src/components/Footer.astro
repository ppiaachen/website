---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import logo from "@/assets/logo-ppiaachen.png";
import { links as navLinks, hasChildren } from "@/data/nav-links";
import { links as socLinks } from "@/data/social-links";
---

<footer class="mt-10">
  <div class="container mx-auto px-6 py-8">
    <div class="flex flex-col items-center text-center">
      <Image
        class="h-12 w-auto"
        loading="lazy"
        src={logo}
        width={150}
        alt="Logo PPI Aachen."
      />
      <div class="-mx-4 mt-6 flex flex-wrap justify-center">
        {
          navLinks.map((link) =>
            !hasChildren(link) ? (
              <a
                href={link.href}
                class="mx-4 text-sm text-gray-600 transition-colors duration-300 hover:text-blue-500"
                aria-label={link.text}
              >
                {link.text}
              </a>
            ) : null
          )
        }
      </div>
    </div>
    <hr class="my-6 border-gray-200 md:my-10" />
    <div class="flex flex-col items-center sm:flex-row sm:justify-between">
      <p class="text-sm text-gray-500">
        Â© Copyright 2024. All Rights Reserved.
      </p>
      <div class="-mx-2 mt-8 flex sm:mt-0">
        {
          socLinks.map((link) => (
            <a
              href={link.url}
              target="_blank"
              class="mx-2 text-gray-500 transition-colors duration-300 hover:text-blue-500"
              aria-label={link.label}
            >
              <Icon name={link.iconName} class="size-5" aria-hidden="true" />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
